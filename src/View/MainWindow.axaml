<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="View.MainWindow"
             RequestedThemeVariant="Default">

    <Application.Styles>
        <FluentTheme />

        <!-- Style for your big project card buttons -->
        <Style Selector="Button.projectCard">
            <Setter Property="Background" Value="#2D2D3D"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Width" Value="600"/>
            <Setter Property="Height" Value="100"/>
        </Style>

        <!-- Hover effect: slightly lighter background when mouse over -->
        <Style Selector="Button.projectCard:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#3D3D50"/>
        </Style>
    </Application.Styles>
</Application>
